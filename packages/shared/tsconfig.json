{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDir": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true
  }
}
